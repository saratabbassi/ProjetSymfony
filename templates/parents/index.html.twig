{% extends 'base.html.twig' %}

{% block title %}Parents index{% endblock %}

{% block body %}
    <h1>Parents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Cin</th>
                <th>Adresse</th>
                <th>NumTel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parent in parents %}
            <tr>
                <td>{{ parent.id }}</td>
                <td>{{ parent.nom }}</td>
                <td>{{ parent.prenom }}</td>
                <td>{{ parent.cin }}</td>
                <td>{{ parent.adresse }}</td>
                <td>{{ parent.numTel }}</td>
                <td>
                    <a href="{{ path('app_parents_show', {'id': parent.id}) }}">show</a>
                    <a href="{{ path('app_parents_edit', {'id': parent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_parents_new') }}">Create new</a>
{% endblock %}
